# i3 config file (v4)
#
# Please see http://i3wm.org/docs/userguide.html for a complete reference!
#
# This config file uses keycodes (bindsym) and was written for the QWERTY
# layout.
#
# To get a config file with the same key positions, but for your current
# layout, use the i3-config-wizard
#

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font pango:System San Francisco 11

# This font is widely installed, provides lots of unicode glyphs, right-to-left
# text rendering and scalability on retina/hidpi displays (thanks to pango).
#font pango:DejaVu Sans Mono 8

# Before i3 v4.8, we used to recommend this one as the default:
# font -misc-fixed-medium-r-normal--13-120-75-75-C-70-iso10646-1
# The font above is very space-efficient, that is, it looks good, sharp and
# clear in small sizes. However, its unicode glyph coverage is limited, the old
# X core fonts rendering does not support right-to-left and this being a bitmap
# font, it doesn’t scale on retina/hidpi displays.

gaps inner 8
gaps outer 5
smart_gaps on
smart_borders on
#gaps horizontal 0
#gaps vertical 0
#gaps top 0
#gaps ringht 0
#gaps bottom 0
#gaps left 0

# use these keys for focus, movement, and resize directions when reaching for
# the arrows is not convenient
set $up k
set $down j
set $left n
set $right l

set $wMod Mod4
set $aMod Mod1

set $bg-color                   #d3d7cf
set $inactive-bg-color          #000000
set $text-color                 #f3f4f5
set $inactive-text-color        #676e7d
set $urgent-bg-color            #FF0000
set $transparent		#0000009F

bindsym $wMod+Shift+z exec xscreensaver-command --lock

# use Mouse+$aMod to drag floating windows to their wanted position
floating_modifier $wMod

# start a terminal
bindsym $wMod+Return exec xfce4-terminal
bindsym $wMod+$aMod+Return exec xfce4-terminal --drop-down

# kill focused window
bindsym $wMod+Shift+q kill

#control keys

bindsym XF86MonBrightnessUp exec xbacklight -inc 10
bindsym XF86MonBrightnessDown exec xbacklight -dec 10
bindsym XF86AudioMute exec amixer set Master toggle
bindsym XF86AudioRaiseVolume exec amixer set Master 5%+
bindsym XF86AudioLowerVolume exec amixer set Master 5%-

# start dmenu (a program launcher)
bindsym $wMod+d exec dmenu_run -b -fn Mono:size=11 -nb '#000' -nf '#FFF' -sb '#0050AA' -sf '#FFF' 
# There also is the (new) i3-dmenu-desktop which only displays applications
# shipping a .desktop file. It is a wrapper around dmenu, so you need that
# installed.
# bindsym $aMod+d exec --no-startup-id i3-dmenu-desktop

# change focus
bindsym $wMod+$left focus left
bindsym $wMod+$down focus down
bindsym $wMod+$up focus up
bindsym $wMod+$right focus right

# alternatively, you can use the cursor keys:
bindsym $wMod+Left focus left
bindsym $wMod+Down focus down
bindsym $wMod+Up focus up
bindsym $wMod+Right focus right

# move focused window
bindsym $wMod+Shift+$left move left
bindsym $wMod+Shift+$down move down
bindsym $wMod+Shift+$up move up
bindsym $wMod+Shift+$right move right

# alternatively, you can use the cursor keys:
bindsym $wMod+Shift+Left move left
bindsym $wMod+Shift+Down move down
bindsym $wMod+Shift+Up move up
bindsym $wMod+Shift+Right move right

# split in horizontal orientation
bindsym $wMod+h split h

# split in vertical orientation
bindsym $wMod+v split v

# enter fullscreen mode for the focused container
bindsym $wMod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $wMod+s layout stacking
bindsym $wMod+w layout tabbed
bindsym $wMod+e layout toggle split

# toggle tiling / floating
bindsym $wMod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $wMod+space focus mode_toggle

# focus the parent container
bindsym $wMod+a focus parent

# focus the child container
#bindsym $aMod+d focus child

# move the currently focused window to the scratchpad
bindsym $wMod+Shift+minus move scratchpad

# Show the next scratchpad window or hide the focused scratchpad window.
# If there are multiple scratchpad windows, this command cycles through them.
bindsym $wMod+minus scratchpad show

set $wk_sp_1 "1: "
set $wk_sp_2 "2: "
set $wk_sp_3 "3: "
set $wk_sp_4 "4: "
set $wk_sp_5 "5: "
set $wk_sp_6 "6: "
set $wk_sp_7 "7: "
set $wk_sp_8 "8: "
set $wk_sp_9 "9: "
set $wk_sp_10 "10: "

# switch to workspace
bindsym $wMod+1 workspace $wk_sp_1
bindsym $wMod+2 workspace $wk_sp_2
bindsym $wMod+3 workspace $wk_sp_3
bindsym $wMod+4 workspace $wk_sp_4
bindsym $wMod+5 workspace $wk_sp_5
bindsym $wMod+6 workspace $wk_sp_6
bindsym $wMod+7 workspace $wk_sp_7
bindsym $wMod+8 workspace $wk_sp_8
bindsym $wMod+9 workspace $wk_sp_9
bindsym $wMod+0 workspace $wk_sp_10

# move focused container to workspace
bindsym $wMod+Shift+1 move container to workspace $wk_sp_1
bindsym $wMod+Shift+2 move container to workspace $wk_sp_2
bindsym $wMod+Shift+3 move container to workspace $wk_sp_3
bindsym $wMod+Shift+4 move container to workspace $wk_sp_4
bindsym $wMod+Shift+5 move container to workspace $wk_sp_5
bindsym $wMod+Shift+6 move container to workspace $wk_sp_6
bindsym $wMod+Shift+7 move container to workspace $wk_sp_7
bindsym $wMod+Shift+8 move container to workspace $wk_sp_8
bindsym $wMod+Shift+9 move container to workspace $wk_sp_9
bindsym $wMod+Shift+0 move container to workspace $wk_sp_10

# reload the configuration file
bindsym $wMod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $wMod+Shift+r restart
# exit i3 (logs you out of your X session)
bindsym $wMod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym $left       resize shrink width 10 px or 10 ppt
        bindsym $down       resize grow height 10 px or 10 ppt
        bindsym $up         resize shrink height 10 px or 10 ppt
        bindsym $right      resize grow width 10 px or 10 ppt

        # same bindings, but for the arrow keys
        bindsym Left        resize shrink width 10 px or 10 ppt
        bindsym Down        resize grow height 10 px or 10 ppt
        bindsym Up          resize shrink height 10 px or 10 ppt
        bindsym Right       resize grow width 10 px or 10 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $wMod+r mode "resize"

default_border pixel 2

# windows colors
# 			border			background		text			indicator
client.focused		$bg-color		$bg-color		#000000		        #007000
client.unfocused	$inactive-bg-color	$inactive-bg-color	$inactive-text-color	#007000
client.focused_inactive	$inactive-bg-color	$inactive-bg-color	$inactive-text-color	#007000
client.urgent		#A00000          	#A00000         	$text-color		#007000

#hide_edge_borders both

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
	i3bar_command i3bar -t
	position top
	tray_padding 0
        status_command /home/dragon/.config/conky/i3status.sh
	colors {

		background #00000000
                #background #000000
		separator  #757575
		#			border			background			text
		#
		focused_workspace	#0050AA		        #0050AA    			#FFFFFF
		inactive_workspace	#000000			#000000				$inactive-text-color
		urgent_workspace	#A00000              	#A00000	                        $text-color

	}
}

